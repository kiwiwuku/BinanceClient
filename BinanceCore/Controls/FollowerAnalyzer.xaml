<UserControl x:Class="BinanceCore.Controls.FollowerAnalyzer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BinanceCore.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button x:Name="modeB" Content="Жду падения"/>
        <CheckBox x:Name="activeCB" Content="Активен" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button Content="Базовый уровень" Grid.Row="1"/>
        <TextBox x:Name="baseTB" Text="100" Grid.Row="1" Grid.Column="1"/>
        <Label Content="Размах" Grid.Row="2"/>
        <TextBox x:Name="rangeTB" Text="10" Grid.Row="2" Grid.Column="1"/>
    </Grid>
</UserControl>
