<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BinanceCore"
        xmlns:Controls="clr-namespace:BinanceCore.Controls" x:Class="BinanceCore.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="1160">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80px"/>
            <ColumnDefinition Width="640px"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="320px"/>
            <RowDefinition Height="138px"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <StackPanel>
                <Label FontSize="8" Padding="0">STABLE:</Label>
                <TextBox x:Name="stableTB" Text="USDT"/>
                <Label FontSize="8" Padding="0">TRADE:</Label>
                <TextBox x:Name="tradeTB" Text=""/>
            </StackPanel>
            <Button Content="Graph" Click="Graph_Clicked"/>
            <Button Content="Find Fractal" Click="FindFractal_Clicked"/>
            <StackPanel Orientation="Horizontal" Margin="0 20 0 5">

                <TextBox x:Name="intervalTB" Text="30" FontSize="16" Width="50" TextChanged="intervalTB_TextChanged"/>
                <Label Content="sec"/>
            </StackPanel>
            <CheckBox Content="Auto" Unchecked="CheckBox_Checked" RenderTransformOrigin="0.5,0" Width="50" Checked="CheckBox_Checked">
                <CheckBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </CheckBox.RenderTransform>
            </CheckBox>
            <CheckBox Content="Short" RenderTransformOrigin="0.5,0" Width="50" Margin="0 10" x:Name="shortCB" IsChecked="True">
                <CheckBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </CheckBox.RenderTransform>
            </CheckBox>
            <Controls:Balance x:Name="balance"  Height="38" Background="LightGray"/>
            <Button Content="Sell TRADE" Click="SellBTCClicked"/>
            <Button Content="Buy TRADE" Click="BuyBTCClicked"/>
            <!--            <Button Content="Stop"  Click="Button_Click_1" />
            <Button Content="Go" Click="Button_Click"/> -->
        </StackPanel>
        <Grid Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Black" >
            <Image x:Name="iv"/>
            <Canvas x:Name="canv"/>
        </Grid>
        <Grid Grid.RowSpan="2" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="addFractalB" Content="Add Fractal" Click="addFractalB_Click"/>
                <Button x:Name="saveB" Content="Save Configuration" Click="saveB_Click"/>
                <Button x:Name="loadB" Content="Load Configuration" Click="loadB_Click"/>
                <ComboBox VerticalAlignment="Stretch" Width="100" x:Name="Symbols" SelectionChanged="Symbols_SelectionChanged" />
            </StackPanel>
            <TabControl Grid.Row="1">
                <TabItem Header="Follow" Height="20" VerticalAlignment="Bottom">
                    <ScrollViewer HorizontalAlignment="Stretch">
                        <StackPanel x:Name="followSP" >
                            <Controls:FollowerAnalyzer x:Name="followA"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Fractals">
                    <ScrollViewer HorizontalAlignment="Stretch">
                        <StackPanel x:Name="fractalsSP" >
                            <local:FractalConfiguration x:Name="fractalConfiga" />
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
